    { device = "/dev/disk/by-uuid/54a3374e-05b5-4e8e-bfd0-9b1873586f75";
      fsType = "ext4";
    };

  boot.initrd.luks.devices."luks-9c1cb217-1e15-4bf2-b385-e5a1915eb984".device = "/dev/disk/by-uuid/9c1cb217-1e15-4bf2-b385-e5a1915eb984";
