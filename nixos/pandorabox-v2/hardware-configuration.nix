      fsType = "vfat";
      options = [ "fmask=0077" "dmask=0077" ];
    };

  # enable hibernate
  boot.kernelParams = ["mem_sleep_default=deep"];
  powerManagement = {
    enable = true;
    powertop.enable = true;
